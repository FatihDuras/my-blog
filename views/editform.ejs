<%- include ('partials/__head.ejs') -%>

<body>

  <!-- Navigation -->
  <%- include ('partials/__nav.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Edit Post</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form method="POST" action="/edit?_method=PUT">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Başlık</label>
              <input type="text" class="form-control" placeholder="Başlık" id="name" name="title" value="<%= post.title %>" required data-validation-required-message="Please enter title.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Alt başlık</label>
              <input type="text" class="form-control" placeholder="Alt başlık" id="subname" name="subtitle" value="<%= post.subtitle %>" required data-validation-required-message="Please enter subtitle.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>İçerik</label>
              <textarea rows="5" class="form-control" placeholder="İçerik" id="message" name="content" required data-validation-required-message="Please enter content."><%= post.content %></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Yazar</label>
              <input type="text" class="form-control" placeholder="Yazar" id="author" name="author" value="<%= post.author %>" required data-validation-required-message="Please enter your name.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <input type="hidden" name="id" value="<%= post._id %>">
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Güncelle</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include ('partials/__footer.ejs') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
